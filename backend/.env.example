# ===========================================
# Configuration Alteris Backend
# Copiez ce fichier vers .env et remplissez les valeurs
# ===========================================

# =====================
# Application
# =====================
APP_ENV=development
# Valeurs possibles: development, staging, production
DEBUG=false
LOG_LEVEL=INFO

# =====================
# Base de données MongoDB
# =====================
MONGO_URI=mongodb://localhost:27017
MONGO_DB=alternance_db

# Pool de connexions MongoDB
MONGO_MIN_POOL_SIZE=10
MONGO_MAX_POOL_SIZE=100

# =====================
# Sécurité (OBLIGATOIRE en production)
# =====================
# Générez une clé sécurisée avec: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-minimum-32-characters-long

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_EXPIRATION_DAYS=7

# =====================
# CORS
# =====================
# En production, listez les origines autorisées séparées par des virgules
# Exemple: https://app.alteris.fr,https://admin.alteris.fr
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# =====================
# Rate Limiting
# =====================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
# Fenêtre en secondes
RATE_LIMIT_WINDOW=60

# =====================
# Cache
# =====================
CACHE_ENABLED=true
# TTL par défaut en secondes
CACHE_DEFAULT_TTL=300
# Nombre maximum d'entrées en cache
CACHE_MAX_SIZE=1000

# Optionnel: URL Redis pour cache distribué
# REDIS_URL=redis://localhost:6379/0

# =====================
# Performance
# =====================
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_SECURITY_MIDDLEWARE=true

# Seuil mémoire pour déclencher le GC (en MB)
MEMORY_THRESHOLD_MB=500

# =====================
# Pagination
# =====================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# =====================
# Upload de fichiers
# =====================
# Taille max en bytes (10 MB par défaut)
MAX_CONTENT_LENGTH=10485760

# =====================
# Proxies (si derrière un load balancer)
# =====================
# Adresses IP des proxies de confiance, séparées par des virgules
TRUSTED_PROXIES=
